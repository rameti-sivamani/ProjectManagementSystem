<%- include('./layouts/head.ejs') %>

    <link rel="stylesheet" href="/CSS/registration.css">
    <link rel="stylesheet" href="/CSS/form-styles.css">
    </head>

    <body>

        <%- include('./layouts/navbar.ejs') %>
            <main>
                <form action="" method="post" class="form-control" data-path="<%= path %>"
                    onsubmit="return validateForm()">
                    <h1>
                        <%= path=="/login" ? "Login" : "" %>
                    </h1>
                    <h1>
                        <%= path=="/register" ? "Register Now" : "" %>
                    </h1>


                    <div class="form-item">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                        <span class="error-message" id="email-error"></span>
                    </div>
                    <% if (path=='/register' ) { %>
                        <div class="form-item">
                            <label for="fullname">Full Name </label>
                            <input type="text" id="username" name="fullname" required>
                            <span class="error-message" id="username-error"></span>
                        </div>
                        <% } %>
                            <div class="form-item">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" required>
                                <span class="error-message" id="password-error"></span>
                            </div>

                            <% if (path=='/register' ) { %>
                                <div class="form-item">
                                    <label for="con-password">Confirm Password</label>
                                    <input type="password" id="con-password" name="con-password" required>
                                    <span class="error-message" id="confirm-password-error"></span>
                                </div>
                                <% } %>

                                    <input type="submit" value="<%= path == '/login' ? 'Login' : 'Register' %>">

                                    <p>Already have an account?
                                        <a href="<%= path == '/login' ? '/register' : '/login' %>">
                                            <%= path=='/register' ? "Login" : "Register" %>
                                        </a>
                                    </p>
                </form>

            </main>


    </body>

    </html>