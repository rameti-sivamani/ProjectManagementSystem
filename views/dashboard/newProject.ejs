<section class="project-card new-project">
    <form action="/dashboard/create" method="post" class="project-create-form">
        
        <h1 style="text-align: center; font-size: larger; margin:10px 0px 20px 0px">Create A New Project</h1>
        <div class="project-content">
            <label for="title">Title :</label>
            <input type="text" name="title" id="title" required>
        </div>
        <div class="project-content">
            <label for="description">Description :</label>
            <input type="text" name="description" id="description" required>
        </div>
        <div class="project-content">
            <label for="deadline">Deadline :</label>
            <input type="date" name="deadline" id="deadline">
        </div>
        <div class="project-content">
            <label for="members">Members :</label>
            <input type="text" name="members" id="members" required>
        </div>
        <button type="submit">Create Project</button>

</section>